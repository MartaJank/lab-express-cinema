<div class="movie">
    <img src="{{movie.image}}" alt="" class="carat">
    <div class="movie-container">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>Director: {{movie.director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <div class="hrs">
            {{#each movie.showtimes}}
                <p>{{this}} |&nbsp;</p>
            {{/each}}
        </div>
        
    </div>
</div>
